<Window x:Class="CameraArchery.View.VideoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:CameraArchery.UsersControl"
        Title="VideoWindow" Height="300" Width="300" WindowState="Maximized" WindowStyle="None"
        Closing="Window_Closed" KeyDown="Window_KeyDown" ShowInTaskbar="False" Background="Black">

    <TabControl x:Name="MainTabControl" BorderThickness="0"  Background="Black" SelectionChanged="TabControl_SelectionChanged">
        <TabControl.Resources>
            <Style TargetType="{x:Type TabPanel}">
                <Setter Property="Background" Value="Black"></Setter>
            </Style>
            <Style TargetType="{x:Type TabItem}">
                <Setter Property="Background" Value="CornflowerBlue"></Setter>

            </Style>

        </TabControl.Resources>
        <TabItem Header="{DynamicResource ResourceKey=video}">
            <Grid>
                <Popup Name="myPopup" IsOpen="True" HorizontalAlignment="Center" 
                            PlacementTarget="{Binding ElementName=MainPanel}" Placement="Center">
                    <TextBlock Name="myPopupText" FontSize="20" 
                            Background="LightBlue" Foreground="Blue"  
                            Text="{DynamicResource ResourceKey=videoPopUp}"/>
                </Popup>
                <DockPanel LastChildFill="True">
                    <ProgressBar Height="20"  x:Name="ProgressBar"  
                            DockPanel.Dock="Bottom"/>
                    <StackPanel Width="100" DockPanel.Dock="Left" VerticalAlignment="Center" 
                            x:Name="ButtonPanel" Visibility="Collapsed">
                        <Button Margin="5" HorizontalAlignment="Center" Height="50" Background="CornflowerBlue" 
                                Content="{DynamicResource ResourceKey=StartRecord}" 
                            Click="Recording_Click"/>
                    </StackPanel>
                    <Image x:Name="pictureBox1"/>
                </DockPanel>    
            </Grid>
        </TabItem>
        <TabItem Header="{DynamicResource ResourceKey=replay}">
            <my:CustomReplay x:Name="CustomReplayComponent"/>
        </TabItem>
    </TabControl>
</Window>
